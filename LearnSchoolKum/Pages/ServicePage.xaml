<Page x:Class="LearnSchoolKum.Pages.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnSchoolKum.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="2"
                  Grid.Column="1"
                  Grid.RowSpan="6"
                  Grid.ColumnSpan="7"
                  ItemsSource="{Binding Services}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Height="150"
                               Width="150"
                               Grid.Column="0"
                               Grid.RowSpan="2"
                               Source="{Binding MainImagePath}"/>

                        <StackPanel Grid.Column="1"
                                    Grid.ColumnSpan="2">
                            <TextBlock x:Name="NameSertviceTb"
                                        Text="{Binding Title}"/>
                            <TextBlock x:Name="PriceServiceTb"
                                       Text="{Binding Cost}"/>
                        </StackPanel>
                        <Button x:Name="EditBtn"
                                Grid.Column="1"
                                Grid.Row="1"
                                Content="Редактировать"
                                Width="50"
                                Height="150"/>
                        <Button x:Name="DeleteBtn"
                                Grid.Column="2"
                                Grid.Row="1"
                                Content="Удалить"
                                Width="50"
                                Height="100"/>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
